<section class="bl_home_sections">
    <div class="bl_section_wrapper bl_intro_section">
        <div class="row columns bl_section">
          <div class="bl_copy">
              <p class="bl_lead">Welcome to the new age bookmarking app.</p>
              <p class="bl_sub">A lean &amp; simple tool for collecting the gems of web. </p>
          </div>
          <div class="bl_screenshot">
         <iframe width="560" height="315" src="https://www.youtube.com/embed/sksd7x9p-28" frameborder="0" allowfullscreen></iframe>
          </div>
        </div>
    </div>

<!--  bookmarks  -->
    <div class="bl_section_wrapper bl_bookmarks_section">
        <div class="row columns bl_section ">
            <div class="bl_copy">
                <p class="bl_lead">Clean and simple interface.</p>
                <p class="bl_sub">Browse, search, &amp; edit your bookmarks. </p>
            </div>
            <div class="bl_screenshot">
              <%= image_tag("screenshots/bookmarks.png") %>
            </div>
        </div>
    </div>

<!--  new topic  -->
    <div class="bl_section_wrapper bl_new_topic_section">
        <div class="row columns bl_section  ">
          <div class="bl_copy">
                <p class="bl_lead">Organize your bookmarks with <em>topics</em>.</p>
                <p class="bl_sub">Create <em>public</em> or <em>private</em> topics. </p>
            </div>
            <div class="bl_screenshot">
              <%= image_tag("screenshots/new_topics.png") %>
            </div>
        </div>
    </div>

  <!--  public profile  -->
      <div class="bl_section_wrapper bl_public_profile_section">
          <div class="row columns bl_section ">
              <div class="bl_copy">
                  <p class="bl_lead">Share you collection with the world.</p>
                  <p class="bl_sub">Public topics are visible on your public profile. </p>
              </div>
              <div class="bl_screenshot">
                <%= image_tag("screenshots/public-profile.png") %>
              </div>
          </div>
      </div>

<!-- topics -->
    <div class="bl_section_wrapper bl_topics_section">
        <div class="row columns bl_section ">
          <div class="bl_copy">
                <p class="bl_lead">Browse through topics.</p>
                <p class="bl_sub">Easily access your <em>topics</em> &amp; associated <em>bookmarks.</em> </p>
            </div>
            <div class="bl_screenshot">
              <%= image_tag("screenshots/topics.png") %>
            </div>
        </div>
    </div>

<!--  Chroms extension  -->
    <div class="bl_section_wrapper bl_extension_section">
        <div class="row columns bl_section ">
          <div class="bl_copy">
                <p class="bl_lead">Chrome browser extension.</p>
                <p class="bl_sub">Quickly save bookmarks using <em>"bloi remote"</em> browser extension. </p>
            </div>
            <div class="bl_screenshot">
              <%= image_tag("screenshots/extension.png") %>
            </div>
        </div>
    </div>

<!--  Upcoming features and footer  -->
    <div class="bl_section_wrapper bl_upcoming_section">
        <div class="row columns bl_section">
          <div class="bl_copy">
                <p class="bl_lead">Upcoming features.</p>
                <p class="bl_sub"> Bloi is rapidly evolving &amp; adding new features constantly. </p>
            </div>
            <div class="bl_features_list row large-up-3">
                <div class="column bl_i_feature hvr-grow">
                  <section class="text-center"><i class="fa fa-tags"></i></section>
                  <p class="text-center">Tags with auto suggest feature.</p>
                </div>
                <div class="column bl_i_feature hvr-grow">
                  <section class="text-center"><i class="fa fa-mobile"></i></section>
                  <p class="text-center">iPhone and Android applications.</p>
                </div>
                <div class="column bl_i_feature hvr-grow">
                  <section class="text-center"><i class="fa fa-firefox"></i></section>
                  <p class="text-center">Safari and Mozilla Firefox extensions.</p>
                </div>
                <div class="column bl_i_feature hvr-grow">
                  <section class="text-center"><i class="fa fa-language"></i></section>
                  <p class="text-center">Support for multiple languages.</p>
                </div>
                <div class="column bl_i_feature hvr-grow">
                  <section class="text-center"><i class="fa fa-image"></i></section>
                  <p class="text-center">Saving images and screenshots.</p>
                </div>
                <div class="column bl_i_feature hvr-grow">
                  <section class="text-center"><i class="fa fa-search-plus"></i></section>
                  <p class="text-center">Improved searching ability.</p>
                </div>
            </div>
            <%= render "layouts/footer" %>
        </div>
    </div>
</section>
