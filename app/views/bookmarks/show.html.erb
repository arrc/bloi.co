<%= page_title "Bloi - #{@bookmark.title if @bookmark.title.present? }" %>

<div class="row bl_bookmarks__show">

  <!-- Title -->
  <% if @bookmark.title.present? %>
      <h5 class="bl_bookmarks__show--title"><%= @bookmark.title %></h5>
  <% end %>
  <!-- Url -->
    <p class="bl_bookmarks__show--url"><a href="<%= @bookmark.url %>"> <%= @bookmark.url %> </a></p>

  <!-- Description -->
    <% if @bookmark.description.present? %>
      <p class="bl_bookmarks__show--description"> <%= @bookmark.description %> </p>
    <% end %>

  <!-- Meta section -->
    <section class="clearfix bl_bookmarks__show--meta">
        <div class="float-left bl_bookmarks__show--meta__topic">
          <% if @bookmark.topic.present? %>
            <i class="ion-ios-list-outline bl_bookmarks__show--meta__topic--icon"></i>
            <span class="bl_bookmarks__show--meta__topic--name"><%= link_to @bookmark.topic.name, topic_path(current_user, @bookmark.topic) %></span>
            <% if @bookmark.topic.is_public? %> <i class="ion-ios-people bl_bml__item--meta__lock--icon" title="This topic is public"></i> <% end %>
          <% end %>
        </div>

        <div class="float-right">
            <date><%= @bookmark.created_at.strftime("%d %b %Y") %></date>
        </div>
    </section>
</div>

<div class="bl_bookmarks__show--actions">
  <ul class="menu simple">
    <li><a href="#">Edit</a></li>
    <li><a href="#">Delete</a></li>
  </ul>
</div>
