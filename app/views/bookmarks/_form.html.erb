<div class="bl_bookmark__form">
    <% if @bookmark.errors.any? %>
      <p class="bl_error">Fix the errors and try again</p>
    <% end %>

    <%= form_for(bookmark, url: url) do |f| %>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "title" %>
      <p class="help-text bl_error"><%= @bookmark.errors[:title].first %></p>

      <%= f.label :url %>
      <%= f.text_field :url, placeholder: "url"  %>
      <p class="help-text bl_error"><%= @bookmark.errors[:url].first %></p>

      <%= f.label :description %>
      <%= f.text_field :description, placeholder: "description"  %>

      <%= f.label :flag %>
      <%= f.collection_radio_buttons :flag_id, Flag.all, :id, :name%>

      <%= f.label :topic %>
      <%= f.collection_select :topic_id, Topic.where(user_id: current_user), :id, :name , {include_blank: true}, {id: "topic-select"} %>

      <%#= f.collection_select :topic_name, Topic.where(user_id: current_user), :name, :name, {include_blank: true}, {id: "topic-select"} %>

      <%= f.hidden_field :favicon, value: params[:favIcon] %>
      <%= f.hidden_field :favicon, value: params[:title] %>
      <br>
      <%= f.submit "save", { class: "button secondary"} %>
    <% end %>
</div>
