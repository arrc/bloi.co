<%= page_title "Topics" %>
<h2>Topics</h2>


<%= link_to "Create new", new_topic_path(current_user) %>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Description</th>
      <th>Is public</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.each do |topic| %>
      <tr>
        <td><%= topic.id %></td>
        <td><%= topic.name %></td>
        <td><%= topic.description if topic.description.present?  %></td>
        <td><%= topic.is_public if topic.is_public.present? %></td>
        <td><%= link_to 'Show', topic_path(current_user, topic) %></td>
        <td><%= link_to 'Destroy', topic_path(current_user, topic), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
